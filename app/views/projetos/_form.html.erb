<%= form_for(projeto) do |f| %>
  <% if projeto.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(projeto.errors.count, "error") %> Projeto não pôde ser salvo
      </h2>

      <ul>
      <% projeto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section>
    <div class="row min-width">
      <div id="form-show" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 min-width">
        <%= f.label :nome %>
        <%= f.text_field :nome %>

        <%= f.label :codigo_base %>
        <%= f.text_field :codigo_base %>

        <%= f.label :revisao %>
        <%= f.number_field :revisao %>

        <%= f.label :data %>
        <%= f.date_field :data %>

        <%= f.label :usuario %>
        <%= f.text_field :usuario %>

        <%= f.label :observacoes %>
        <%= f.text_area :observacoes %>

        <%= f.label :numero_habitantes %>
        <%= f.number_field :numero_habitantes %>

        <%= f.label :localizacao %>
        <%= f.text_field :localizacao %>

        <%= f.label :tipo_projeto %>
        <%= f.number_field :tipo_projeto %>
      </div>
    </div>

  </section>
  <div class="row min-width">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <% if projeto.persisted? %>
          <%= f.submit "Atualizar Projeto", :id => 'my-button', :class => 'btn btn-default'%>
      <% else %>
          <%= f.submit "Criar Projeto", :id => 'my-button', :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>
<% end %>
