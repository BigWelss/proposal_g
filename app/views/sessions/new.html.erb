<% provide(:title, "Log in") %>
<% provide(:header, "Pricing") %>

<section>
  <div class="row min-width">
    <div id="form-login" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 ">
      <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :login %>
          <%= f.text_field :login %>

          <%= f.label :password %>
          <%= f.password_field :password %>
          
        <div class="row min-width">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <%= f.submit "Entrar", :id => "my-button", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>